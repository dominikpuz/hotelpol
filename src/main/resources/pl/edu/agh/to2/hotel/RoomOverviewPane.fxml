<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import pl.edu.agh.to2.hotel.fxml.components.RoomTable?>
<BorderPane prefHeight="400.0" prefWidth="800.0" stylesheets="@base_app_style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.to2.hotel.presenter.room.RoomOverview">
    <top>
        <HBox alignment="CENTER_LEFT" prefWidth="150.0" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </opaqueInsets>
            <Button fx:id="addRoomButton" alignment="TOP_CENTER" mnemonicParsing="false" text="Add room" styleClass="action_button"
                    onAction="#handleAddRoom">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="editRoomButton" alignment="TOP_CENTER" mnemonicParsing="false" text="Edit room" styleClass="action_button"
                    onAction="#handleEditRoom">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </top>
    <center>
        <RoomTable fx:id="roomTable"/>
    </center>
    <right>
        <fx:include fx:id="roomFiltering" source="RoomFilteringBox.fxml"/> <!-- The "unresolved reference" can be ignored, because we only need this element's controller -->
    </right>
</BorderPane>
