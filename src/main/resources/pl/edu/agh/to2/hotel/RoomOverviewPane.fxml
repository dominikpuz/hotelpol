<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<BorderPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.to2.hotel.presenter.room.RoomOverview">
    <top>
        <HBox alignment="CENTER_LEFT" prefWidth="150.0" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </opaqueInsets>
            <Button fx:id="addRoomButton" alignment="TOP_CENTER" mnemonicParsing="false" text="Add room"
                    onAction="#handleAddRoom">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="editRoomButton" alignment="TOP_CENTER" mnemonicParsing="false" text="Edit room"
                    onAction="#handleEditRoom">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="showBedsButton" alignment="TOP_CENTER" mnemonicParsing="false" text="Show beds"
                    onAction="#handleShowBeds">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </top>
    <center>
        <TableView fx:id="roomTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="roomNumberColumn" text="Room number"/>
                <TableColumn fx:id="floorColumn" text="Floor"/>
                <TableColumn fx:id="rentPriceColumn" text="Rent price"/>
                <TableColumn fx:id="roomStandardColumn" text="Room standard"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
